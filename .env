# Angels AI - Environment Configuration Template
# Copy this to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection (use Supabase for easy setup)
DATABASE_URL=postgresql://user:password@localhost:5432/angels_ai_db
# Or Supabase URL format:
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# ============================================
# AI / LLM PROVIDERS
# ============================================
# OpenAI (for GPT-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Anthropic Claude (if you want to use Claude instead)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================
# SEARCH TOOLS (for web scraping agents)
# ============================================
# Serper (Google Search API)
SERPER_API_KEY=your-serper-api-key-here
# Get from: https://serper.dev

# Brave Search API
BRAVE_API_KEY=your-brave-api-key-here
# Get from: https://brave.com/search/api/

# EXA Search API
EXA_API_KEY=your-exa-api-key-here
# Get from: https://exa.ai

# ============================================
# COMMUNICATION APIS
# ============================================
# WhatsApp Business API (Meta)
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-permanent-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verification-token
# Get from: https://developers.facebook.com/apps

# Africa's Talking (SMS Gateway for 20+ African countries)
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_SENDER_ID=ANGELSAI
# Get from: https://africastalking.com

# Twilio (Alternative SMS provider)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# MOBILE MONEY INTEGRATIONS
# ============================================
# M-Pesa (Kenya - Safaricom Daraja API)
MPESA_ENVIRONMENT=sandbox  # sandbox or production
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=174379  # Your business shortcode
MPESA_PASSKEY=your-passkey
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=your-initiator-password
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback
# Get from: https://developer.safaricom.co.ke

# Airtel Money (Multiple African countries)
# AIRTEL_MONEY_CLIENT_ID=your-client-id
# AIRTEL_MONEY_CLIENT_SECRET=your-client-secret
# AIRTEL_MONEY_MERCHANT_ID=your-merchant-id
# AIRTEL_MONEY_CALLBACK_URL=https://yourdomain.com/api/airtel/callback

# ============================================
# DOCUMENT PROCESSING
# ============================================
# Google Cloud Vision API (OCR)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# Get from: https://cloud.google.com/vision

# Alternative: AWS Textract
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# ============================================
# FILE STORAGE
# ============================================
# AWS S3 (for document storage)
AWS_S3_BUCKET=angels-ai-documents
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Alternative: Cloudflare R2 (cheaper, S3-compatible)
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_BUCKET_NAME=angels-ai-documents

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment
ENVIRONMENT=development  # development, staging, production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-for-jwt-tokens-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry (Error tracking)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# LogRocket (Session replay)
# LOGROCKET_APP_ID=your-app-id

# ============================================
# EMAIL (for notifications to staff)
# ============================================
# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@angelsai.com

# Alternative: AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@angelsai.com

# ============================================
# REDIS (for caching & queues)
# ============================================
REDIS_URL=redis://localhost:6379/0
# Or Redis Cloud: redis://default:password@redis-12345.cloud.redislabs.com:12345

# ============================================
# WEBHOOK URLS (for receiving callbacks)
# ============================================
WEBHOOK_BASE_URL=https://yourdomain.com/api/webhooks
# This will be used for M-Pesa callbacks, WhatsApp webhooks, etc.

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WHATSAPP=true
ENABLE_SMS=true
ENABLE_EMAIL=false
ENABLE_MPESA=true
ENABLE_AI_AGENTS=true
ENABLE_OCR=true
ENABLE_AI_AGENTS=false  # Disables real AI calls
DEMO_MODE=true          # Returns mock data

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# CREWAI SPECIFIC
# ============================================
CREWAI_TELEMETRY_OPT_OUT=true  # Disable telemetry for privacy
